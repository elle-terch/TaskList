<div class = "form" >

  <%= form_with model: @task do |f| %>
    <p>Add a task</p>

    <div class = "field"><%= f.label :name %>
    <%= f.text_field :name %></div>

    <div class = "field"><%= f.label :description %>
    <%= f.text_field :description %></div>

    <div class = "field">
      <%= f.label :completion_date %>
      <%= f.date_field :completion_date %></div>

    <%= f.submit "Add Task" %>

  <% end %>

</div>
