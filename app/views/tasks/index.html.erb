<h2>all tasks</h2>

<ul>

  <% @tasks.all.order(:id).each do |task| %>
  <li>

    <p><%= task[:name] %></p>

    <div class = "options">

      <% if task[:completion_date] == nil %>
        <%= link_to "mark complete", update_status_task_path(task.id), method: :patch %>

        <% else %>

        <%= link_to "mark incomplete", update_status_task_path(task.id), class: "strike", method: :patch %>
      <% end %>


      <%= link_to "view details", task_path(task.id) %>

      <%= link_to "edit task", edit_task_path(task.id) %>

      <%= link_to "delete", task_path(task), class: "delete", method: :delete, data: { confirm: "are you sure you want to delete #{task.name}?"} %>

    </div>

  </li>
  <% end %>
</ul>
